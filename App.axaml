<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AvaloniaCustomCalendar.App"
             xmlns:local="using:AvaloniaCustomCalendar"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="/Assets/Icons.axaml"/>
    </Application.Styles>

  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceInclude Source="avares://AvaloniaCustomCalendar/Assets/Style/CalendarItem.axaml"></ResourceInclude>
        <ResourceInclude Source="avares://AvaloniaCustomCalendar/Assets/Style/CalendarDayButton.axaml"></ResourceInclude>
        <ResourceInclude Source="avares://AvaloniaCustomCalendar/Assets/Style/CalendarButton.axaml"></ResourceInclude>
        <ResourceInclude Source="avares://AvaloniaCustomCalendar/Assets/Style/CalendarDatePicker.axaml"></ResourceInclude>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>
</Application>